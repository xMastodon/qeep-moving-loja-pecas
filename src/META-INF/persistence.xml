<persistence xmlns="http://java.sun.com/xml/ns/persistence"
			 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
			 http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
			 version="2.0">
	<persistence-unit name="pecas">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<class>br.com.qm.loja.seu.messias.entity.Peca</class>
		<properties>
			<property name="javax.persistence.jdbc.driver"
				value="org.postgresql.Driver" />
			<property name="javax.persistence.jdbc.url"
				value="jdbc:postgresql://127.0.0.1:5432/qeepmoving"/>
			<property name="
				javax.persistence.jdbc.user " value="postgres" />
			<property name="javax.persistence.jdbc.password"
				value="Raw2011#" />
			<property name="hibernate.default_schema" value="loja_seu_messias"/>
			<property name="hibernate.dialect"
				value="org.hibernate.dialect.PostgreSQL92Dialect" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="update" />			
		</properties>
	</persistence-unit>
</persistence>